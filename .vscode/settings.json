{
    "python.testing.pytestArgs": [
        "-v",
        "--cov=src",
        "--cov-report=xml",
        "--cov-report=term",
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "runItOn": {
        "commands": [
            {
                "match": "\\.py$",
                "isAsync": true,
                "isShellCommand": false,
                "cmd": "testing.runAll"
            }
        ]
    }
}
